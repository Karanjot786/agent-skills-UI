// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // Main connection URL with pooling parameters
  // Add ?connection_limit=20&pool_timeout=30 to your DATABASE_URL env var
  // Example: postgresql://user:pass@host:5432/db?connection_limit=20&pool_timeout=30
  url       = env("DATABASE_URL")
  // Direct connection for migrations (bypasses pgBouncer if used)
  directUrl = env("DIRECT_URL")
}

model skills {
  id               String    @id
  name             String
  author           String
  scoped_name      String?
  description      String?
  author_avatar    String?
  github_url       String    @unique
  raw_url          String?
  repo_full_name   String?
  stars            Int       @default(0)
  forks            Int       @default(0)
  path             String?
  branch           String    @default("main")
  has_marketplace  Boolean   @default(false)
  indexed_at       DateTime  @default(now()) @db.Timestamptz
  updated_at       DateTime? @db.Timestamptz
  content          String?
  folder_url       String?
  from_manifest    Boolean   @default(false)
  manifest_version String?
  category         String?
  fts              Unsupported("tsvector")? @default(dbgenerated("((setweight(to_tsvector('english'::regconfig, COALESCE(name, ''::text)), 'A'::\"char\") || setweight(to_tsvector('english'::regconfig, COALESCE(description, ''::text)), 'B'::\"char\")) || setweight(to_tsvector('english'::regconfig, COALESCE(author, ''::text)), 'C'::\"char\"))"))
  search_vector    Unsupported("tsvector")?

  @@index([author])
  @@index([name])
  @@index([stars(sort: Desc)])
  @@index([category])
  @@index([updated_at(sort: Desc)])
  @@index([author, author_avatar], map: "idx_skills_author_avatar")
  @@index([scoped_name], map: "skills_scoped_idx")
  @@index([fts], type: Gin)
  @@index([search_vector], map: "idx_skills_search", type: Gin)
  @@index([search_vector], map: "idx_skills_search_vector", type: Gin)
  @@index([stars(sort: Desc)], map: "idx_skills_stars")
}

model categories {
  id          String   @id
  name        String
  icon        String
  keywords    String[]
  skill_count Int      @default(0)
  sort_order  Int      @default(0)

  @@index([sort_order])
}

model skill_stats {
  id             String   @id @default("global")
  total_skills   Int      @default(0)
  unique_authors Int      @default(0)
  top_authors    Json     @default("[]")
  updated_at     DateTime @default(now()) @db.Timestamptz
}

// CLI Telemetry - anonymous usage tracking
model telemetry_events {
  id         String   @id @default(cuid())
  event      String   // install, search, check, update, command
  version    String   // CLI version
  isCI       Boolean  @default(false) @map("is_ci")
  metadata   String?  // JSON string with additional data
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz

  @@index([event])
  @@index([createdAt(sort: Desc)])
  @@map("telemetry_events")
}

// Community-submitted skills repositories
model repo_submissions {
  id             String   @id @default(cuid())
  full_name      String   @unique  // owner/repo â€” the only user input
  html_url       String?
  description    String?
  stars          Int      @default(0)
  language       String?
  license        String?
  skills_count   Int      @default(0)
  skill_paths    String[] @default([])
  default_branch String   @default("main")
  status         String   @default("pending") // pending, approved, rejected
  reviewed_at    DateTime? @db.Timestamptz
  submitted_at   DateTime @default(now()) @db.Timestamptz

  @@index([status])
  @@index([submitted_at(sort: Desc)])
}
